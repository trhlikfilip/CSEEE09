
const int AciPump = 12;
const int AlkPump = 13;
const int pHSensor = A0; 
const int minPH = 3; 
const int maxPH = 7;
const int idealPH = 5;

int pHReading = 0;     
int AciPumpS = LOW;       
int AlkPumpS = LOW;

void setup() {
  pinMode(AciPump, OUTPUT);
  pinMode(AlkPump, OUTPUT);
  Serial.begin(9600);      
}

void loop() {
  // read the sensor and store it in the variable sensorReading:
  pHReading = analogRead(pHSensor);
  Serial.println(pHReading);

  // if the sensor reading is greater than the threshold:
  if (pHReading > maxPH) {
    AciPumpS = !AciPumpS;
    digitalWrite(AciPump,HIGH);
    Serial.println("Activating Acid Pump");
  }
  else if (pHReading < minPH){
    AlkPumpS = !AlkPumpS;
    digitalWrite(AlkPump, HIGH);
    Serial.println("Activating Alkaline Pump");
  }
  delay(300);
  AciPumpS = LOW;
  AlkPumpS = LOW;
  delay(100);
}
